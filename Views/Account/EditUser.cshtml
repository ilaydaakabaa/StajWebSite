@model WebAppBaslangc.Models.EditUserViewModel

@{
    ViewData["Title"] = "Edit User Role";
}
@{
    Layout = "_AdminLayout";
}
<h1>Edit User Role</h1>

<form asp-action="EditUser" method="post">
    <div class="form-group">
        <label asp-for="Role" class="control-label"></label>
        <select asp-for="Role" class="form-control">
            @Html.Raw(Model.Role == "Admin" ? "<option value='Admin' selected>Admin</option><option value='User'>User</option>" : "<option value='Admin'>Admin</option><option value='User' selected>User</option>")
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="userId" />
    <input type="hidden" asp-for="userName" />
    <input type="hidden" asp-for="eMail" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="AdminPanel" class="btn btn-secondary">Back to Admin Panel</a>
</form>
