@model WebAppBaslangc.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    // Layout = "_Layout2.cshtml";
}
@{
    Layout = "_AdminLayout";
}
 Sayfaya özel stil dosyasını dahil et 
<link rel="stylesheet" href="~/css/custom-styles.css" asp-append-version="true" />

 Sayfaya özgü iç stil 
<style>
    body {
        background-color: #f4f4f9; /* Arka plan rengini açık gri yapar */
        color: #333; /* Metin rengini koyu gri yapar */
        margin: 0;
        font-family: Arial, sans-serif; /* Yazı tipini Arial yapar */
    }

    .navbar {
        margin-bottom: 0; /* Navbar ile sayfanın geri kalanı arasında boşluk bırakmaz */
    }

    .content-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: calc(100vh - 56px); /* Ekran yüksekliğinden navbar yüksekliğini çıkarır */
        margin-top: 56px; /* Navbar yüksekliği kadar boşluk bırakır */
    }

    .login-box {
        background: #ddd;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        max-width: 400px;
        width: 100%;
        box-sizing: border-box; /* Padding ve border hesaplamalarını genişliğe dahil eder */
    }

    h1 {
        color: #60917b; 
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1rem; /* Form grupları arasında boşluk bırakır */
    }

    .btn-primary {
        background-color: #60917b;
        border-color: #444d42;
        font-size: 1rem;
    }

        .btn-primary:hover {
            background-color: #444d42;
            border-color: #ddd;
        }

    .text-danger {
        color: #dc3545;
    }

    .text-muted {
        color: #6c757d;
    }

    .form-footer {
        text-align: center;
        margin-top: 1rem;

    }
</style>



<div class="content-wrapper">
    <div class="login-box">
        <h1>Login</h1>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="userNameOrEmail" class="control-label"></label>
                <input asp-for="userNameOrEmail" class="form-control" />
                <span asp-validation-for="userNameOrEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
        <div class="form-footer">
            Don't have an account? <a asp-action="Register">Go To Register</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
